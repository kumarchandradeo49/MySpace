<%- include('partials/header'); -%>

<div id="comp-container" class="container my-5">
  <h1 class="text-center mb-4">Edit <%= title %></h1>

  <form action="/posts/<%= postId %>/edit" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="post-title" class="form-label">Title</label>
      <input class="form-control" id="post-title" name="post_title" type="text" required autocomplete="off" value="<%= title %>">
    </div>

    <div class="mb-3">
      <label for="postcontent" class="form-label">Description</label>
      <textarea class="form-control" id="postcontent" name="post_body" rows="4" required><%= content %></textarea>
    </div>

    <div class="mb-3">
      <label for="myfile" class="form-label">Replace file (optional):</label>
      <input type="file" id="myfile" name="myfile" class="form-control">
      <% if (file) { %>
        <small class="text-muted mt-1 d-block">Current file: <%= file %></small>
      <% } %>
    </div>

    <button class="btn btn-primary" type="submit">Update</button>
  </form>
</div>

<%- include('partials/footer'); -%>